---
import Layout from '../layouts/Layout.astro';

const contactSchema = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: 'Contacto - Booking Caribe',
  description: 'Contacta a Booking Caribe para información sobre tours, hoteles y traslados en Cancún y la Riviera Maya',
};
---

<Layout
  title="Contacto - Booking Caribe"
  description="Contáctanos para información sobre tours, hoteles y traslados en Cancún, Riviera Maya y el Caribe Mexicano. Respondemos en menos de 24 horas."
  keywords="contacto booking caribe, contactar agencia cancun, ayuda tours cancun, whatsapp cancun tours"
  schema={contactSchema}
  transparent={true}
>
  <!-- Hero -->
  <div class="relative overflow-hidden" style="background: linear-gradient(135deg, #0A1628 0%, #0891b2 100%);">
    <div class="container mx-auto px-4 pt-28 pb-20 relative z-10 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Estamos aquí para ayudarte</h1>
      <p class="text-xl text-white/70 max-w-xl mx-auto">
        ¿Tienes preguntas sobre tours, hoteles o traslados? Escríbenos y respondemos en menos de 24 horas.
      </p>
    </div>
    <div class="overflow-hidden" aria-hidden="true">
      <svg viewBox="0 0 1440 50" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" class="w-full">
        <path fill="#fffbf7" d="M0,30 C360,60 720,10 1440,35 L1440,50 L0,50 Z"/>
      </svg>
    </div>
  </div>

  <div class="container mx-auto px-4 py-16 max-w-5xl">
    <div class="grid md:grid-cols-2 gap-12">

      <!-- Contact Form -->
      <div class="reveal-left">
        <h2 class="text-2xl font-bold mb-6">Envíanos un mensaje</h2>
        <form
          id="contact-form"
          class="space-y-5"
          novalidate
        >
          <div class="form-control">
            <label class="label"><span class="label-text font-semibold">Nombre completo *</span></label>
            <input
              type="text"
              name="name"
              placeholder="Tu nombre"
              class="input input-bordered"
              required
            />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text font-semibold">Email *</span></label>
            <input
              type="email"
              name="email"
              placeholder="tu@email.com"
              class="input input-bordered"
              required
            />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text font-semibold">Teléfono / WhatsApp</span></label>
            <input
              type="tel"
              name="phone"
              placeholder="+52 998 123 4567"
              class="input input-bordered"
            />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text font-semibold">Asunto *</span></label>
            <select name="subject" class="select select-bordered" required>
              <option value="">Selecciona un tema</option>
              <option value="tours">Información sobre Tours</option>
              <option value="hotels">Información sobre Hoteles</option>
              <option value="transfers">Información sobre Traslados</option>
              <option value="booking">Confirmar una Reserva</option>
              <option value="cancel">Cancelar una Reserva</option>
              <option value="other">Otro</option>
            </select>
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text font-semibold">Mensaje *</span></label>
            <textarea
              name="message"
              placeholder="¿En qué podemos ayudarte?"
              class="textarea textarea-bordered min-h-[120px]"
              required
            ></textarea>
          </div>
          <button
            type="submit"
            id="contact-submit"
            class="btn btn-primary btn-block btn-lg"
          >
            Enviar mensaje
          </button>
          <div id="contact-success" class="hidden alert alert-success rounded-2xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>¡Mensaje enviado! Te contactaremos pronto.</span>
          </div>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="reveal-right space-y-8">
        <div>
          <h2 class="text-2xl font-bold mb-6">Información de contacto</h2>
          <div class="space-y-5">
            {[
              {
                icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
                label: 'Dirección',
                value: 'Cancún, Quintana Roo, México 77500',
              },
              {
                icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
                label: 'Teléfono',
                value: '+52 998 123 4567',
                href: 'tel:+529981234567',
              },
              {
                icon: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
                label: 'Email',
                value: 'info@bookingcaribe.com',
                href: 'mailto:info@bookingcaribe.com',
              },
              {
                icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
                label: 'Horario de atención',
                value: '24 horas, los 7 días de la semana',
              },
            ].map(({ icon, label, value, href }) => (
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-base-content/50 uppercase tracking-wide">{label}</p>
                  {href ? (
                    <a href={href} class="font-semibold hover:text-primary transition-colors">{value}</a>
                  ) : (
                    <p class="font-semibold">{value}</p>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- WhatsApp Card -->
        <div class="bg-gradient-to-br from-green-50 to-emerald-50 border border-green-200 rounded-2xl p-6">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-2xl bg-green-500 flex items-center justify-center shrink-0">
              <svg class="h-6 w-6 fill-white" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347zm-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884zm8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg">Chat por WhatsApp</h3>
              <p class="text-sm text-base-content/65 mt-1 mb-3">
                ¿Necesitas respuesta rápida? Escríbenos por WhatsApp y te respondemos en minutos.
              </p>
              <a
                href="https://wa.me/529981234567?text=Hola,%20necesito%20información%20sobre%20tours%20en%20Cancún"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-sm bg-green-500 hover:bg-green-600 border-0 text-white gap-2"
              >
                Iniciar chat →
              </a>
            </div>
          </div>
        </div>

        <!-- Response Time -->
        <div class="alert bg-info/8 border border-info/20 rounded-2xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-info shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-sm">Tiempo de respuesta promedio: <strong>&lt; 2 horas</strong></p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('contact-submit') as HTMLButtonElement;
  const successMsg = document.getElementById('contact-success');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (!form.checkValidity()) {
      form.reportValidity();
      return;
    }

    submitBtn.textContent = 'Enviando...';
    submitBtn.disabled = true;

    // Simulate send (replace with actual API call)
    await new Promise(r => setTimeout(r, 1500));

    form.reset();
    submitBtn.textContent = 'Enviar mensaje';
    submitBtn.disabled = false;
    successMsg?.classList.remove('hidden');

    setTimeout(() => successMsg?.classList.add('hidden'), 5000);
  });
</script>
